@using System.Web.Optimization

@{
    Layout = null;
    
}
<!DOCTYPE html>

<html>


<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title - SimpleBlog</title>
    @Styles.Render("~/styles")

</head>

<body>

<header>
    <h1>
        <a href="@Url.RouteUrl("Home")">Simple Blog</a>
        <i class="glyphicon glyphicon-bell"></i>
    </h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome back, @User.Identity.Name</p>
        <a href="@Url.RouteUrl("logout")">Logout</a>
        if (User.IsInRole("admin"))
        {
            <a href="@Url.Action("index", "posts", new {area = "admin"})">View admin posts</a>
        }
    }
    else
    {
        <a href="@Url.RouteUrl("login")">Login</a>
    }

</header>

@RenderBody()
<footer>
    &copy; @DateTime.UtcNow.Year - Nkubito
</footer>

@Scripts.Render("~/scripts")

@RenderSection("Scripts", false)
</body>

</html>
